.register{:id => "event-sydney"}
  %h2 Next Event
  %h3 Sydney
  %dl
    %dt When
    %dd Saturday October 13th 2012
    %dt Time
    %dd 10:30AM to 5:00PM
    %dt Where
    %dd UTS Green Spaces
  %a{:href => 'http://www.pozible.com/index.php/archive/index/10709/description/0/0'} Register

- Event.next_and_upcoming.each do |event|
  .register{:id => "event-#{event.id}"}
    %h2 Next Event
    %h3= event.city
    %dl
      %dt When
      %dd= event.happens_on.to_s(:day_and_date_and_year)
      %dt Time
      %dd 10:00AM to 5:00PM
      %dt Where
      %dd= event.venue
      - if !event.on_sale?
        %dt Tickets
        %dd= event.release_at.to_s(:date_with_hour)
    - if event.on_sale?
      - if !event.sold_out?
        %a{:href => event_register_path(event)} Register
      - elsif !event.initial_sold_out?
        %span Sold Out!
        != link_to "Join the waiting list", new_event_waiting_list_path(event)
      - else
        %span Sold Out!
        %dl
          %dt More Tickets
          %dd= event.excess_at.to_s(:date_with_hour)

